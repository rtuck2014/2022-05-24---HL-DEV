    <rules>
        <fullName>lmsilt__RosterSendEmailCancelled</fullName>
        <actions>
            <name>lmsilt__RosterSendEmailCancelled</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>(lmsilt__Student__c  &lt;&gt; CreatedById) &amp;&amp; $Setup.lmsilt__ILT_Settings__c.lmsilt__Enable_notification__c &amp;&amp; ISPICKVAL(lmsilt__Status__c, &apos;Cancelled&apos;) &amp;&amp; (ISNEW() || ISCHANGED(lmsilt__Status__c))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
