    <rules>
        <fullName>ERP Contract</fullName>
        <actions>
            <name>ERP_Contract</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <description>Triggers the outbound message for Contract</description>
        <formula>AND( 	 	OR( 		AND( 			ISPICKVAL(ERP_Contract_Type__c, &quot;ICO&quot;), 			OR( 				ISNEW(),       				ISCHANGED(ERP_Submitted_to_Sync__c) 			)	 		), 		 		AND( 			ISPICKVAL(ERP_Contract_Type__c, &quot;Engagement&quot;), 			OR( 				AND( 					ISNEW(), 					Is_Main_Contract__c 				), 				 				OR( 					AND( 					OR( 						ISCHANGED(ERP_Submitted_to_Sync__c), 						ISCHANGED(Is_Main_Contract__c) 						), 					Is_Main_Contract__c 					), 					AND( 					NOT(Is_Main_Contract__c), 					ISCHANGED(ERP_Submitted_to_Sync_Manually__c) 					) 				) 			) 		) 	), 	NOT(ISBLANK(ERP_Bill_To_Customer_ID__c)), 	NOT(ISBLANK(ERP_Bill_To_Contact_Id__c)), 	NOT(ISBLANK(ERP_Project_Id__c)), NOT( ERP_Do_Not_Sync__c)  )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>ERP Submitted to Sync fields on Contract</fullName>
        <actions>
            <name>ERP_Submitted_to_Sync_on_Contract</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Update &apos;ERP Submitted to Sync&apos; field of Contract with current date and time.</description>
        <formula>AND(OR(ISNEW(),         ISCHANGED(CurrencyIsoCode),         ISCHANGED(Description__c), ISCHANGED(Is_Main_Contract__c),         ISCHANGED(ERP_TAX_Classification_Code__c),         ISCHANGED(Bill_To__c),         ISCHANGED(HL_LOB__c),         ISCHANGED(Ship_To__c),         ISCHANGED(ERP_Legal_Entity__c),         ISCHANGED(HL_Location__c),        ISCHANGED(Total_Fee__c),        ISCHANGED(ERP_Expense_Cap__c),        ISCHANGED(Funding_Amount__c),        ISCHANGED(ERP_Business_Unit_Id__c),        ISCHANGED(Product_Type_Code__c),        ISCHANGED(Industry_Code__c),        ISCHANGED(ERP_Revenue_Method__c),        ISCHANGED(ERP_Payment_Terms__c)),     NOT(ISBLANK(ERP_Bill_To_Customer_ID__c)),     NOT(ISBLANK(ERP_Bill_To_Contact_Id__c)),     NOT(ISBLANK(ERP_Bill_To_Address_ID__c)),     NOT(ISBLANK(ERP_Project_Id__c)))</formula>
        <triggerType>onAllChanges</triggerType>
