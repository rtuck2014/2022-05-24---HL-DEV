        <locationX>511</locationX>
        <locationY>324</locationY>
        <inputAssignments>
            <field>Industry_Group_Head_Email__c</field>
            <value>
                <elementReference>GroupHeadEmail</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Industry_Group_Head__c</field>
            <value>
                <elementReference>UserID</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>51</locationY>
        <connector>
            <targetReference>Industry_Group_Name</targetReference>
        </connector>
