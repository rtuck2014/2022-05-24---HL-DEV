        <name>Store_Group_Head_Details</name>
        <label>Store Group Head Details</label>
        <locationX>160</locationX>
        <locationY>480</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Get_userID</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Label</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>IndustryGroupName</elementReference>
            </value>
        </filters>
        <object>Industry_Group__mdt</object>
        <outputAssignments>
            <assignToReference>GroupHeadEmail</assignToReference>
            <field>Industry_Group_Head_Email__c</field>
        </outputAssignments>
    </recordLookups>
    <recordUpdates>
