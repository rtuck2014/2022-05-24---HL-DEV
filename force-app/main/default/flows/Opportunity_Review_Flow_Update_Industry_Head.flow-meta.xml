                <elementReference>$Record.Related_Opportunity__r.Industry_Group__c</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Store_Group_Head_Details</targetReference>
        </connector>
    </assignments>
    <description>To fetch and update group head details for the Opportunity Review Approval Process.</description>
    <interviewLabel>Opportunity Review Flow_Update Industry Head {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opportunity Review Flow_Update Industry Head</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
