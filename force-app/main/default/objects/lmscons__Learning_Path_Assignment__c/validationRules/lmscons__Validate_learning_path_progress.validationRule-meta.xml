<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>lmscons__Validate_learning_path_progress</fullName>
    <active>true</active>
    <description>Learning Path Progress must be between 0 and 100%.</description>
    <errorConditionFormula>OR(
lmscons__Learning_Path_Progress__c &lt; 0,
lmscons__Learning_Path_Progress__c &gt; 1
)</errorConditionFormula>
    <errorDisplayField>lmscons__Learning_Path_Progress__c</errorDisplayField>
    <errorMessage>Learning Path Progress must be between 0 and 100%.</errorMessage>
</ValidationRule>
