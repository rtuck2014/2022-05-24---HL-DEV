<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PitchEmail_Cannot_Be_In_Future</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK( Pitch_Email_Sent__c )) &amp;&amp; Pitch_Email_Sent__c &gt; TODAY()</errorConditionFormula>
    <errorDisplayField>Date_Engaged__c</errorDisplayField>
    <errorMessage>Date Engaged cannot be in the future.</errorMessage>
</ValidationRule>
