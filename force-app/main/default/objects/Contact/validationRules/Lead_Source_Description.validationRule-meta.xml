<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lead_Source_Description</fullName>
    <active>true</active>
    <description>Lead Source is selected but Lead Source Description is missing</description>
    <errorConditionFormula>ISBLANK(TEXT(LeadSource))= FALSE
&amp;&amp;   ISBLANK(Lead_Source_Description__c)</errorConditionFormula>
    <errorDisplayField>Lead_Source_Description__c</errorDisplayField>
    <errorMessage>Please enter the lead source description</errorMessage>
</ValidationRule>
