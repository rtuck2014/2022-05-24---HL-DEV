<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>DND_Admin</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>DND_Approval</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Job_Type__c</field>
        <field>HL_Entity__c</field>
        <field>Industry_Group__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>DND_Approval_Q</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>DND Release Approval</label>
        <name>DND_Release_Approval</name>
    </approvalStep>
    <emailTemplate>DND/Remove_DND_Status_for_Approver</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity__c.DND_Status__c</field>
            <operation>equals</operation>
            <value>APPROVED</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity__c.Approval_Process__c</field>
            <operation>equals</operation>
            <value>DND</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Alert_for_Approved_DND_Removal</name>
            <type>Alert</type>
        </action>
        <action>
            <name>NULL_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Restore_Opp_Name</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_DND_Status_to_RELEASED</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Alert_for_Rejected_DND_Removal</name>
            <type>Alert</type>
        </action>
        <action>
            <name>NULL_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_DND_Status_to_APPROVED</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Store_DND_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_DND_Status_to_Req_Removal</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>DISABLE DND</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>NULL_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_DND_Status_to_APPROVED</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
