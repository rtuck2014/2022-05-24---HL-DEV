<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Engagement_Summary_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Approver_05__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Approver_06__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Approver_07__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Approver_08__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Approver_01__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Approver_02__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Approver_03__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Approver_04__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>lmsilt__WorkflowNotifications/ENG_Summary_App_Req</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>OR(ISPICKVAL(Summary_Status__c,&apos;In Process&apos;),
ISPICKVAL(Summary_Status__c,&apos;In Review&apos;),
ISPICKVAL(Summary_Status__c,&apos;Approved&apos;))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ENG_Summary_Approved_Email</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ENG_Summary_Rejection_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Summary_In_Process</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Engagement_Summary_Status_In_Review</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Store_Submitter_Eng_Summary</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CF Summary Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Engagement_Summary_Status_In_Process</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
